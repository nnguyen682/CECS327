<Window x:Class="WpfApp1.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LoginScreen" Height="450" Width="800">
    <Grid Background="Black">
        <StackPanel>
            <Label Foreground="White" FontSize="25" HorizontalAlignment="Center">Trytify</Label>
            <Label Foreground="White" FontSize="25" Margin="46,0,41.6,0">Username:</Label>
            <TextBox HorizontalAlignment="Right" Margin="0,0,41.6,0" Width="706" Height="30" FontSize="25" Text="hello"/>
            <Label Foreground="White" FontSize="25" Margin="46,0,41.6,0">Password:</Label>
            <TextBox Margin="46,0,41.6,0" Height="34" TextChanged="TextBox_TextChanged" FontSize="25" Text="hello"></TextBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button  Margin ="20" FontSize="50" Width="376" Background="Green" Foreground="White" Content="Sign In"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
