<Window x:Class="WpfApp1.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Spooftify Music Search" Height="300" Width="500">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <TextBox Width="100">
            </TextBox>
            <Button >
                Search
            </Button>
            <Label Content="      Search By: "/>
            <ComboBox SelectedIndex="0" Width="100">
                <ComboBoxItem Content="Song Title"/>
                <ComboBoxItem Content="Artist"/>
                <ComboBoxItem Content="Album"/>
            </ComboBox>
        </StackPanel>
        <Grid>
            <Grid.RowDefinitions/>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1">
                <StackPanel>
                    <Label  Content="Song Title" BorderBrush="Black" BorderThickness="1"/>
                    <ListBox/>
                </StackPanel>
            </Border>
            <Border  Grid.Column="1" BorderBrush="Gray" BorderThickness="1">
                <StackPanel>
                    <Label  Content="Artist" BorderBrush="Black" BorderThickness="1"/>
                    <ListBox/>
                </StackPanel>
            </Border>
            <Border  Grid.Column="2" BorderBrush="Gray" BorderThickness="1">
                <StackPanel>
                    <Label  Content="Album" BorderBrush="Black" BorderThickness="1"/>
                    <ListBox/>
                </StackPanel>
            </Border>
            <Border Grid.Column="3" BorderBrush="Gray" BorderThickness="1">
                <StackPanel>
                    <Label Content="Add to Playlist" BorderBrush="Black" BorderThickness="1"/>
                    <ListBox/>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
